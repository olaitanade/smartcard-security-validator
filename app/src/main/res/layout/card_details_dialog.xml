<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_marginTop="@dimen/tapcard_vertical_margin"
    android:id="@+id/card_details_layout">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/serial_tv"
        android:textSize="@dimen/card_details_tv"
        android:padding="@dimen/app_info_padding"
        android:layout_margin="4dp"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/resident_tv"
        android:textSize="@dimen/card_details_tv"
        android:padding="@dimen/app_info_padding"
        android:layout_margin="4dp"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cluster_tv"
        android:textSize="@dimen/card_details_tv"
        android:padding="@dimen/app_info_padding"
        android:layout_margin="4dp"
       />
    <ProgressBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="7dp"/>
</LinearLayout>